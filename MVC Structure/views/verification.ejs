<%- include('./partials/navbar-handler.ejs') %>
<title>Verification</title>
</head>
<body>
  <div class="verification doctor mb-3 p-3">
    <h3>Verify Patient:</h3>
    <form action="/appointment/verify" method="post">
        <input type="text" name="token" placeholder="Input Token Here">
        <button class="btn btn-success" type="submit">Verify</button>
    </form>
    <% if(appointment != "none"){ %>
      <% if(appointment != {} && appointment != null){ %>
        
        <div class="no-patient m-2 p-2" style="text-align: center; background-color: rgb(210, 199, 195);">
          <h3><svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="green" class="bi bi-person-check-fill" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
          </svg> Verified</h3>
        </div>
        
      <% } else { %>
        <div class="no-patient m-2 p-2" style="text-align: center; background-color: rgb(210, 199, 195);">
          
        <h3><svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="red" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
          <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </svg> Not Verified</h3>
        </div>
      <% } %>
    <% } %>
  </div>
</body>